<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src = "@drawable/frying_pan_epmty_background"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="32dp"
            android:text="Daily Recipe"
            android:textColor="@color/white"
            android:layout_marginTop="160dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Регистрация"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
             />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColorHint="#B2B7C6"
            android:hint="Имя"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            style="@style/Widget.Design.TextInputLayout"
            app:backgroundTint="#B2B7C6"
            app:boxStrokeColor="@color/white">
            <!--app:startIconDrawable="@d"-->


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:background="@android:color/transparent"
                android:textColor="#B2B7C6"
                app:startIconDrawable="@drawable/ic_outline_person_24"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="24dp"
            android:layout_margin="32dp"
            android:textColor="#B2B7C6"
            app:drawableStartCompat="@drawable/ic_baseline_email_24"
            app:backgroundTint="#B2B7C6"/>
        <EditText
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Пароль"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginTop="24dp"
            android:textColor="#B2B7C6"
            app:drawableStartCompat="@drawable/ic_baseline_lock_24"
            app:backgroundTint="#B2B7C6"/>

        <Button
            android:id="@+id/registrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Регистрация"
            app:backgroundTint="@color/orange"
            android:layout_marginTop="24dp"
            app:cornerRadius="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signinButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:text="Already registered?"
                android:textColor="#B2B7C6"
                android:textSize="14dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign in."
                android:textColor="@color/orange"
                android:textSize="14dp"
                android:paddingStart="0dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>