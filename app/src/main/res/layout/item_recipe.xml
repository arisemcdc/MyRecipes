<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recipe_card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="@color/card_view_background_color"
    android:layout_margin="10dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/item_Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/french_toast_cardview"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="110dp">
            <TextView
                android:id="@+id/meal_text_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Завтрак"
                android:textColor="@color/text_view_blue_color"
                android:textSize="8dp"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/name_text_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Французские тосты с клубникой "
                android:textColor="@color/text_view_black_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBar_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/orange"
                    style="@style/customRatingBar"
                    android:rating="2"
                    android:stepSize="1"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/calories_text_view_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="280 калорий"
                    android:textColor="@color/orange"
                    android:textSize="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time_for_preparing_text_view_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 мин"
                    android:textColor="@color/text_view_grey_color"
                    android:textSize="8dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_baseline_access_time_24"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/number_of_servings_text_view_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 порция"
                    android:textColor="@color/text_view_grey_color"
                    android:textSize="8dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/service_desk"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="18dp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            android:gravity="center"
            android:checked="true"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>